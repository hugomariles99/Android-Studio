<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menu_tres_barras">

    <TextView
        android:id="@+id/fragment_menuTresBarras_categorias"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight=".5"
        android:background="@color/black"
        android:gravity="center"
        android:padding="10dp"
        android:text="Menu"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:shadowRadius="8"
        android:backgroundTint="@color/NavyBlue"/>

    <Button
        android:id="@+id/fragment_menuTresBarras_inicio"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@color/black"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/categoria_inicio"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:shadowRadius="8"
        android:textAllCaps="false"
        android:backgroundTint="@color/NavyBlue2"/>

    <Button
        android:id="@+id/fragment_menuTresBarras_banos"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@color/black"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/categoria_banos"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:shadowRadius="8"
        android:textAllCaps="false"
        android:backgroundTint="@color/DarkCornflowerBlue"/>

    <Button
        android:id="@+id/fragment_menuTresBarras_cocina"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@color/black"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/categoria_cocina"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:shadowRadius="8"
        android:textAllCaps="false"
        android:backgroundTint="@color/StarCommandBlue"/>

    <Button
        android:id="@+id/fragment_menuTresBarras_hogar"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@color/black"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/categoria_hogar"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:shadowRadius="8"
        android:textAllCaps="false"
        android:backgroundTint="@color/BlueGreen"/>

    <Button
        android:id="@+id/fragment_menuTresBarras_inventario"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@color/black"
        android:gravity="center"
        android:padding="10dp"
        android:text="Inventario"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:shadowRadius="8"
        android:textAllCaps="false"
        android:backgroundTint="@color/CuruleanCrayola"/>

</LinearLayout>