<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BackgroundMain">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/inicio_boton_banos"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/white"
                android:src="@mipmap/test"
                android:scaleType="fitCenter"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/inicio_texto_banos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingLeft="15dp"
                android:text="@string/categoria_banos"
                android:gravity="center"
                android:textColor="@color/black" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

        <ImageButton
            android:id="@+id/inicio_boton_cocina"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white"
            android:src="@mipmap/test"
            android:scaleType="fitCenter"
            tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/inicio_texto_cocina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingLeft="15dp"
                android:text="@string/categoria_cocina"
                android:gravity="center"
                android:textColor="@color/black" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

        <ImageButton
            android:id="@+id/inicio_boton_hogar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white"
            android:src="@mipmap/test"
            android:scaleType="fitCenter"
            tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/inicio_texto_hogar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingLeft="15dp"
                android:text="@string/categoria_hogar"
                android:gravity="center"
                android:textColor="@color/black" />

        </LinearLayout>

</LinearLayout>